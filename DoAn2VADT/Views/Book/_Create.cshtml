<div class="modal fade" id="modalCreate" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{action}} danh mục</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="mt-2">
                            <div class="form-group">
                                <label class="control-label">Tên {{displayName}}</label>
                                <input class="form-control" v-model="bookData.name" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Số lượng {{displayName}}</label>
                                <input class="form-control" type="number" v-model="bookData.amount" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Hình ảnh minh hoạ {{displayName}}</label>
                                <input class="form-control" type="image" v-model="bookData.image" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mô tả {{displayName}}</label>
                                <input class="form-control" v-model="bookData.description" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Giá {{displayName}}</label>
                                <input class="form-control" v-model="bookData.price" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Giá giảm</label>
                                <input class="form-control" v-model="bookData.discount" />
                            </div>

                        </div>
                        <div class="mt-2 d-flex justify-content-end">
                            <input type="button" v-on:click="addOrUpdateCateData()" :value="action" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>